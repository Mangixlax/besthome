{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/axios",
      "@nuxtjs/device",
      "cookie-universal-nuxt",
      "@types/jquery",
      "gsap/types",
      "nuxt-i18n",
      "@types/vuelidate",
      "vuelidate",
      "@nuxt/image"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
